<div class="page-header">
  <h1>
    Rent a Wigwam
    <small>Pick One!</small>
  </h1>
</div>

<div>
  <h3>Dates:</h3>
  <form method="get" class="form-horizontal">
    <strong>From:</strong>
    <input type="date" name="from-date" value=<%= params["from-date"] %>>
    <strong>To:</strong>
    <input type="date" name="to-date"  value=<%= params["to-date"] %>>
    <input type="submit" class ="btn btn-primary" value="Search">
  </form>
</div>

<div>
  <h3>Available Wigwams:</h3>
  <% @wigwams.each do |wigwam| %>
    <p><%= render wigwam %></p>
  <% end %>
  <% if @wigwams.empty? %>
    <p>Sorry, no wigwams available for those dates</p>
  <% end %>
</div>


