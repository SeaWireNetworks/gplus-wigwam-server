<% content_for :head do %>
  <script>
    <%= render :partial => "index", :formats => [:js] %>
  </script>
<% end %>

<div class="row-fluid">
  <div class="span12">
    <div class="hero-unit" id="main-unit">
      <div id="main-unit-text">
        <h1>Wigwam Now!</h1>
        <p>Your place to rent and list wigwams, now!</p>
        <form action="<%= new_rental_path %>" method="GET" id="main-form">
          <p>
            <select id="action-select">
              <option value="rent">Rent a wigwam</option>
              <option value="list">List a wigwam</option>
            </select>
            <br>
            <label for="from-date">From:</label>
            <input type="date" class="datepicker" name="from-date" id="from-date">
            <label for="to-date">To:</label>
            <input type="date" class="datepicker" name="to-date" id="to-date">
            <br>
            <button type="submit" class="btn btn-primary">
              Let's go Â»
            </button>
          </p>
        </form>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span6">
      <h3>Recent Listings</h3>
      <% @listings.each do |listing| %>
        <%= render listing %>
      <% end %>
    </div>
    <div class="span6">
      <h3>Recent Rentals</h3>
      <% @rentals.each do |rental| %>
        <%= render rental %>
      <% end %>
    </div>
  </div>
</div>
